{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",          
    "outDir": "dist",
    "baseUrl": ".",                     
    "paths": {
      "*": ["src/*"]                    
    }
  },
  "include": ["src/**/*"],              
  "exclude": ["node_modules"]           
}

